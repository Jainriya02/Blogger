---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout>
  <Fragment slot="header"><Header /></Fragment>

  <section style="padding: 3rem; min-height: 70vh; color: white; text-align: center;">
    
    <div id="user-info" style="margin-top: 2rem; font-size: 1.2rem;"></div>
  </section>

  <Fragment slot="footer"><Footer /></Fragment>

  <script type="module">
    const token = localStorage.getItem('token');
    const userInfo = document.getElementById('user-info');

    if (token) {
      userInfo.innerHTML = `
        <p><strong>Welcome back!</strong> </center></p>
        <p>You are logged in. </center></p>
        <p></p>
      `;
    } else {
      userInfo.innerHTML = `
        <p style="color: red;">You are not logged in.</p>
        <a href="/signin" style="color: #00c6ff;">Go to Sign In</a>
      `;
    }
  </script>
</Layout>




